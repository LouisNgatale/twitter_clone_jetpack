<resources>

    <!-- Allows us to override platform level specific attributes in their
         respective values-vXX folder. -->
    <style name="Platform.Theme.TwitterClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black30</item>
        <item name="android:windowBackground">@color/black30</item>
    </style>

    <!-- The actual theme we use. This varies for light theme (here),
     and values-night for dark theme. -->
    <style name="Theme.TwitterClone" parent="Platform.Theme.TwitterClone">
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryDark">@color/blue800</item>
        <item name="colorAccent">@color/yellow700</item>
    </style>

    <style name="Theme.TwitterClone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">?attr/statusBarBackground</item>
        <item name="android:navigationBarColor">?android:attr/windowBackground</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TwitterClone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TwitterClone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>